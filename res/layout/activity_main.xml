<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="163dp"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/shakira" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Shakira"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/websiteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Offcial Website" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Contact #: (412) 888-9758" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Likes: Milan Pique, Gerard Pique" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Dislikes: Blake Shelton" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Date of Birth: 02/02/1977" />

            <Button
                android:id="@+id/fbButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Follow shakira @ Facebook" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/songsButton"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:text="Songs" />

                <Button
                    android:id="@+id/videosButton"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:text="Videos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/wallpaperButton"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:text="Wallpapers" />

                <Button
                    android:id="@+id/mailinglistButton"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:text="MailingList" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>